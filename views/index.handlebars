<h1 style="text-align:center">Web Chat Online</h1>
<div class="container">
  
  <div id="preview"></div>
  <form id="form-chat" name="form-chat">
    <table class="tableformchat">
      <tr>
        <th>
          <div class="MessageUL"><input id="message" type="text" placeholder="Type message"required="required" />
        </th>
        
        <th>
          <button id="submit" class="btn btn-success" value="submit" type="submit">Send</button>
        </th>
        
        <th>
          <button type="reset" class="btn btn-danger" id="leave" name="leave" onClick="window.location.reload();">Leave</button>
        </th>
       
    </div>
      </tr>
    </table>
    
  </form>
</div>

<div class=" modal" id="modal-username" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog" role="document">
    <form class="modal-content" id="form-username">
      <div class="modal-header">
        <h5 class="modal-title">Set Username</h5>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label>Username</label>
          <input class="form-control" type="text" required="required" />
          <div class="invalid-feedback"></div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary" type="submit">Save</button>
      </div>

    </form>
  </div>
</div>

